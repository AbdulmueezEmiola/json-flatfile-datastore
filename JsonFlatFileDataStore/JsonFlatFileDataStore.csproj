<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.4</TargetFramework>
    <Authors>Tomi Tuhkanen</Authors>
    <AssemblyVersion>1.5.0.0</AssemblyVersion>
    <PackageProjectUrl>https://github.com/ttu/json-flatfile-datastore</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ttu/json-flatfile-datastore</RepositoryUrl>
    <Version>1.5.0</Version>
    <Company />
    <Description>Simple JSON flat file datastore</Description>
    <PackageLicenseUrl>https://raw.githubusercontent.com/ttu/json-flatfile-datastore/master/LICENSE</PackageLicenseUrl>
    <PackageTags>json flatfile datastore database linq</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <FileVersion>1.5.0.0</FileVersion>
    <Product>JsonFlatFileDataStore</Product>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard1.4\JsonFlatFileDataStore.xml</DocumentationFile>
    <NoWarn>1591;1701;1702;1705</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.2" />
    <PackageReference Include="System.Linq.Queryable" Version="4.3.0" />
    <PackageReference Include="System.Reflection" Version="4.3.0" />
    <PackageReference Include="System.Reflection.TypeExtensions" Version="4.3.0" />
    <PackageReference Include="System.ValueTuple" Version="4.3.0" />
  </ItemGroup>

</Project>